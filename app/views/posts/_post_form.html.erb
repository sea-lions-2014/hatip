<%= form_for [current_user, Post.new], remote: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :youtube_url %>
    <%= f.text_field :youtube_url %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :cols => "40", :rows => "5" %>
  </div>

  <%= f.submit %>
<% end %>